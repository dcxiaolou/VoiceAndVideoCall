<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#efeded">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_call"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎体验 心里的声音——音视频通话 功能"
        android:textSize="16dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_voice_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@drawable/voice_call"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="语音通话"
            android:background="@drawable/corner_item_bg"/>

        <TextView
            android:id="@+id/tv_group_voice_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:drawableTop="@drawable/group_voice_call"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="多人语音通话"
            android:background="@drawable/corner_item_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_video_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@drawable/video_call"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="视频通话"
            android:background="@drawable/corner_item_bg"/>

        <TextView
            android:id="@+id/tv_group_video_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:drawableTop="@drawable/group_video_call"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="多人视频通话"
            android:background="@drawable/corner_item_bg"/>

    </LinearLayout>

</LinearLayout>